<h1> Logged in as a Book Keeper </h1>
	<% @books.each do |book| %>
		<div class="container" >
			<div class="row">
				<div class="col-sm-6" >
					<div>
				    <%= image_tag book.picture_url(:thumb).to_s %>
					</div>
					<div>
						<strong><%= link_to "#{book.name}", book %></strong>
						<em>By</em>
						<strong><%= book.author %></strong>
					</div>
				</div>
			</div>
		</div>
		<br>
	<% end %>

