
  <div class="form-signin", align="center"><br / >
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.text_field :name, placeholder:"Name", class:"form-control ", center: true %><br/>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control " %><br/>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class:"form-control " %><br/>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class:"form-control " %><br/>
      </div>

      <div class="actions">
       <%= f.submit"Sign up",class:"btn btn-primary " %>
      </div>
      <div class="actions">
        <span> <em>If already a user? then </em> </span> 
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>


